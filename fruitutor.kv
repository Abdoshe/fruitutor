<Fruitutor>:
    menu_bar: menu_bar
    input_display: input_display
    tutor_display: tutor_display
    stats_display: stats_display

    # menubar
    AnchorLayout:
        anchor_y: 'top'

        MenuBar:
            id: menu_bar
            size_hint: 1, 0.2

    # input device
    AnchorLayout:
        anchor_x: 'left'

        InputDisplay:
            id: input_display
            size_hint: 0.2, 0.6

    # tutor
    AnchorLayout:
        anchor_x: 'right'

        TutorDisplay:
            id: tutor_display
            size_hint: 0.8,  0.6

    # stats
    AnchorLayout:
        anchor_y: 'bottom'

        StatsDisplay:
            id: stats_display
            size_hint: 1, 0.2
