#:import inputdisplay inputdisplay
<InputDisplay>:
    cols: 3
    rows: 4
    col_force_default: True
    row_force_default: True
    col_default_width: 30
    row_default_height: 90

    Label:
        id: label_key_a
        text: 'A'
    Label:
        id: label_key_e
        text: 'E'
    Label:
        id: label_key_space
        text: 'SP'

    Label:
        id: label_key_b
        text: 'B'
    Label:
        id: label_key_f
        text: 'F'
    Label:
        id: label_key_delete
        text: 'DEL'

    Label:
        id: label_key_c
        text: 'C'
    Label:
        id: label_key_g
        text: 'G'
    Label:
        id: label_key_backspace
        text: 'BS'

    Label:
        id: label_key_d
        text: 'D'
    Label:
        id: label_key_h
        text: 'H'
    Label:
        id: label_key_enter
        text: 'ENT'
